<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".information">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menubar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menubar"
                android:gravity="center"
                android:padding="8dp"
                android:text="Information"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="Temperature: "
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#636363"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="12dp"
                    android:text="Rice crops require specific temperature ranges for optimal growth and development. Temperature affects various processes such as seed germination, vegetative growth, flowering, and grain formation. Generally, temperatures between 20°C and 35°C are considered optimal for rice cultivation."
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="Nitrogen(N):  "
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="Nitrogen is an essential nutrient for rice plants as it plays a crucial role in leaf and stem development, chlorophyll production, and overall plant growth. It promotes tillering and increases the yield potential of rice. Adequate nitrogen levels in the soil generally range from 120 to 180 kg/ha for paddy rice in Pakistan."
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="Phosphorus:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:textColor="#636363"
                    android:text="Phosphorus is important for rice crop development as it is involved in energy transfer, root development, and flower formation. It promotes early growth, increases tillering, and enhances root development. Phosphorus deficiency can result in stunted growth and reduced yield. Recommended phosphorus application rates can range from 40 to 60 kg/ha for paddy rice in Pakistan."
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="Potassium(K):"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:textColor="#636363"
                    android:text="It enhances plant tolerance to various stresses, such as drought and diseases. Adequate potassium levels in the soil are necessary for proper rice crop growth, grain filling. Recommended phosphorus application rates can range from 80 to 120 kg/ha for paddy rice in Pakistan."
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="Humidity:"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#636363"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="Rice crops require a high humidity environment for optimal growth. It also promotes efficient nutrient uptake and reduces stress on the plants. However, excessive humidity can lead to disease outbreaks, so a balance is necessary."
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="Moisture:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:textColor="#636363"
                    android:text="Adequate soil moisture is crucial for rice cultivation. Rice is typically grown in flooded or waterlogged conditions. Sufficient moisture in the soil ensures proper root development, nutrient absorption, and efficient photosynthesis. Insufficient moisture can result in poor growth and reduced yields."
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/paragraphs"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:text="pH:"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#636363"
                    android:justificationMode="inter_word"
                    android:padding="10dp"
                    android:text="pH level refers to the acidity or alkalinity of the soil. Rice crops prefer slightly acidic to neutral soil pH levels ranging from 5.5 to 7.0. pH affects nutrient availability in the soil. Proper pH levels ensure optimal nutrient uptake and utilization by rice plants."
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>